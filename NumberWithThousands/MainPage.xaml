<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NumberWithThousands.MainPage"
             xmlns:local="clr-namespace:NumberWithThousands"
             x:DataType="local:MainViewModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit" />

            <Entry
                Text="{Binding UserInput}"
                Keyboard="Numeric"
                HorizontalOptions="Fill" FontSize="30" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>